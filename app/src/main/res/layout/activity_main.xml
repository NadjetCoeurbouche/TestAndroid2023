<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="First word: " />
        <EditText
            android:id="@+id/first_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here the first word" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Second word: " />
        <EditText
            android:id="@+id/second_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here the second word" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/lengthBtn"
            android:text="Btn01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/reversedBtn"
            android:text="Btn02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/commonLettersBtn"
            android:text="Btn03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Length :"
            />
        <EditText android:id="@+id/lengthResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ed3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Reversed :" />
        <EditText
            android:id="@+id/reversedResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ed4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Common :" />
        <EditText
            android:id="@+id/commonLettersResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ed5"/>

    </LinearLayout>

</LinearLayout>